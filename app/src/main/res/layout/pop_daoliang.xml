<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2000000"
    tools:background="#B2000000"
    >

    <ImageView
        android:id="@+id/iv_daoliang_p_close"
        android:layout_width="42dp"
        android:layout_alignParentEnd="true"
        android:layout_height="42dp"
        android:layout_margin="20dp"
        android:src="@drawable/v_daoliang_close_ic"
        />

    <LinearLayout
        android:id="@+id/ll_daoliang_p_center"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:minHeight="304dp"
        android:layout_gravity="center"
        android:background="@drawable/daoliang_bg"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/iv_daoliang_p_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/tv_daoliang_p_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#FF1E15"
            />


        <TextView
            android:id="@+id/tv_daoliang_p_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#6D6D6D"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="52dp"
            android:layout_marginTop="8dp"
            />


    </LinearLayout>

    <TextView
        android:layout_below="@id/ll_daoliang_p_center"
        android:layout_width="201dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-25dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/daoliang_btn_bg"
        android:stateListAnimator="@animator/daoliang_btn_anim"
        android:layout_height="50dp"
        android:text="Get it Now!"
        />

</RelativeLayout>