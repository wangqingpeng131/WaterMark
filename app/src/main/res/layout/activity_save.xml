<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/save_tool_bar"
        layout="@layout/tool_bar" />

    <ImageView
        android:id="@+id/save_iv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="53dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/save_tool_bar" />

    <Button
        android:id="@+id/sv_bt"
        android:layout_width="190dp"
        android:layout_height="46dp"
        android:layout_marginTop="61dp"
        android:background="@drawable/main_bt_bg"
        android:backgroundTint="@color/golden"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/save_iv" />
</androidx.constraintlayout.widget.ConstraintLayout>